{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server (dev)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect", "./node_modules/next/dist/bin/next", "dev", "-p", "3000"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Next.js: debug client (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "Next.js: attach to server (inspect)",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "Next.js: full stack (server + client)",
      "configurations": ["Next.js: debug server (dev)", "Next.js: debug client (Chrome)"]
    }
  ]
}
